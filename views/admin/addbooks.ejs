<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="../css/book.css">
</head>

<body>
    <%- include('../includes/navbar.ejs') %>
    
    <main>
        <div class="form_container">
            <form class="product-form"
                action="/admin/<% if(editing) { %>edit-book<% } else { %>add-book<% } %> " method="post">
                <div class="form-control">
                    <label for="title">Title</label>
                    <input type="text" name="title" id="title"
                        value="<% if(editing) { %><%= book.title %><% } %>">
                </div>
                <div class="form-control">
                    <label for="price">Price</label>
                    <input type="number" step="any" name="price" id="price"
                        value="<% if(editing) { %><%= book.price %><% } %>">
                </div>
                <div class="form-control">
                    <label for="description">Description</label>
                    <input type="text" name="description" id="description"
                        value="<% if(editing) { %><%= book.description %><% } %>">
                </div>
                <div class="form-control">
                    <label for="image">Image-Link</label>
                    <input type="text" name="image" id="image"
                        value="<% if(editing) { %><%= book.image %><% } %>">
                </div>

                <input type="hidden" name="id" id="id" value="<%= book.id %> ">
        
                <button type="submit">
                        <% if(editing) {%>Update book<% }else { %> Add book <% } %>
                </button>
            </form>
        </div>
    </main>

<%- include('../includes/end.ejs') %> 
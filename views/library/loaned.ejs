    <body>
        <%- include('../includes/navbar.ejs') %>

        <main class="loan-main">
            <% if(loans.length>0){ %>
                <ul>
                    <% loans.forEach(loan=>{ %> 
                        <li>
                            <h1>
                                # <%= loan.id %> 
                            </h1>
                            <ul>
                                <% loan.books.forEach(item=>{ %>
                                    <li><%= item.title %> (<%= item.loanItem.quantity %> ) </li>
                                <% }); %>  
                            </ul>
                        </li>
                    <% }); %> 
                </ul>
            <% } else { %>
                <h1>Nothing there!</h1>
            <% } %>   
        </main>     
            

<%- include('../includes/end.ejs') %>